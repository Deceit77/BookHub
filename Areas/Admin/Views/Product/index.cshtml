@model List<MyMvcApp.Models.Product>
<partial name="_Notification"/>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col pt-6">
            <h2 class="text-light">Product List</h2>
        </div>
        <div class="col pt-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                 <th>ISBN</th>
                  <th>Price</th>
                  <th>Author</th>
                   <th>Category</th>
                   
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Author</td                                                                                                                                            >
                    <td>@obj.CategoryId</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-light mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
