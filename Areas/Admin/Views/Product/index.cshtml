@model List<MyMvcApp.Models.Product>
<partial name="_Notification"/>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col pt-6">
            <h2 class="text-light">Product List</h2>
        </div>
        <div class="col pt-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
    <table id="tblTable"  class="table table-bordered table-striped text-light" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                 <th>ISBN</th>
                  <th>Price</th>
                  <th>Author</th>
                   <th>Category</th>
                   <th></th>
                   
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/product.js"></script>
}